#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,physical-layout = &cool436_physical_layout;
    };
    
    cool436_physical_layout: cool436_physical_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";
        transform = <&default_transform>;
        kscan = <&kscan0>;

     keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100    0    0       0     0     0>
            , <&key_physical_attrs 100 100  100    0       0     0     0>
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <9>;
        rows = <4>;               
        map = <
           RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)      RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(1,8)  
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)      RC(1,5)  RC(2,6) RC(1,6) RC(1,7) RC(2,8) 
              RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)      RC(2,5)  RC(3,6) RC(3,7) RC(2,7) RC(3,8) 
                            RC(3,0) RC(3,1) RC(3,2)     RC(3,3) RC(3,4) RC(3,5)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
            row-gpios
                = <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&gpio0 9 GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>
                , <&gpio0 10 GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>
                ;
    };
};
